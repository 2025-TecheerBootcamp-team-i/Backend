# =============================================
# Django Settings
# =============================================
SECRET_KEY=your-super-secret-key-here
DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# =============================================
# PostgreSQL Database Settings
# =============================================
# Local Docker: SQL_HOST=db
# Tailscale Remote DB: SQL_HOST=100.x.x.x (Tailscale IP)
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=music_db
SQL_USER=music_user
SQL_PASSWORD=music_password
SQL_HOST=db
SQL_PORT=5432

# =============================================
# Celery / RabbitMQ Settings
# =============================================
# Local Docker: rabbitmq
# Tailscale Remote: 100.x.x.x (Tailscale IP)
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
