{
  "title": "Django Application Metrics",
  "tags": ["django", "backend", "api"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Total",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(django_http_requests_total_by_method_total[5m])) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "HTTP Response Status Codes",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "HTTP Request Latency (p95)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_http_requests_latency_including_middlewares_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(django_http_requests_latency_including_middlewares_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Latency"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "(sum(rate(django_http_responses_total_by_status_total{status=~'5..'}[5m])) or vector(0)) / clamp_min(sum(rate(django_http_responses_total_by_status_total[5m])), 1) * 100",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "options": {
        "unit": "percent",
        "decimals": 2
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "sum(increase(django_http_requests_before_middlewares_total[1h]))",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "options": {
        "unit": "short"
      }
    },
    {
      "id": 6,
      "title": "Database Queries",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(django_db_execute_total[5m])) or vector(0)",
          "legendFormat": "Queries/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Queries/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 7,
      "title": "Cache Operations",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(django_cache_operations_total[5m])) by (operation) or vector(0)",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Operations/sec"},
        {"format": "short"}
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  }
}
