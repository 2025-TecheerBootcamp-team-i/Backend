# =============================================
# Django Settings
# =============================================
SECRET_KEY=django-insecure-your-secret-key-change-this-in-production
DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================
# PostgreSQL Database Settings
# =============================================
# Local Docker: SQL_HOST=db
# Host Docker: SQL_HOST=host.docker.internal
# Tailscale Remote DB: SQL_HOST=100.x.x.x (Tailscale IP)
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=postgres
SQL_USER=postgres
SQL_PASSWORD=your_database_password_here
SQL_HOST=host.docker.internal
SQL_PORT=5432

# =============================================
# Celery / RabbitMQ Settings
# =============================================
# Local Docker: rabbitmq
# Tailscale Remote: 100.x.x.x (Tailscale IP)
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//

# ==============================================
# Llama Settings
# ==============================================
WINDOWS_LLAMA_IP=your_llama_server_ip_here
LLAMA_MODEL_NAME=llama3.1:8b-instruct-q8_0

# ==============================================
# Ngrok Settings (필수 - Suno API 웹훅용)
# ==============================================
# Suno API는 웹훅 콜백을 받기 위해 공개 URL이 필요합니다.
# ngrok을 사용하여 로컬 서버를 인터넷에 노출시켜야 합니다.
# 1. https://dashboard.ngrok.com/get-started/your-authtoken 에서 토큰 발급
# 2. 아래 NGROK_AUTHTOKEN에 발급받은 토큰 입력
# 3. docker-compose up -d 실행 시 ngrok이 자동으로 시작됩니다.
# 4. ngrok URL 확인: ./get_ngrok_url.sh 또는 http://localhost:4040
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# ==============================================
# Suno API Settings (ngrok 필수)
# ==============================================
# Suno API는 음악 생성 완료 시 웹훅 콜백을 보내므로 공개 URL이 필요합니다.
# ngrok을 설정한 후, ngrok URL을 SUNO_CALLBACK_URL에 설정하세요.
# 예시: https://xxxxx.ngrok-free.dev/api/v1/webhook/suno/
SUNO_API_URL=https://api.sunoapi.org
# Suno 모델 버전 (V3_5, V4_5ALL, V4, V4_5, V4_5PLUS, V5)
SUNO_MODEL_VERSION=V4.5
SUNO_TEST_MODE=false
SUNO_API_KEY=your_suno_api_key_here
# Suno API 콜백 URL (필수 - ngrok URL 사용)
# ngrok 실행 후 ./get_ngrok_url.sh로 확인한 URL을 사용하세요.
# 형식: https://your-ngrok-url.ngrok-free.dev/api/v1/webhook/suno/
SUNO_CALLBACK_URL=https://your-ngrok-url.ngrok-free.dev/api/v1/webhook/suno/



# ==============================================
# AWS S3 Settings (선택 - Suno MP3 자동 업로드)
# ==============================================
# 아래 값들이 설정되어 있으면, Suno가 생성한 MP3를 Celery가 비동기로 S3에 업로드하고
# 업로드 성공 시 DB의 music.audio_url을 S3 URL로 교체합니다.
#
# 보안 주의:
# - Access Key/Secret은 절대 깃에 커밋하지 마세요.
# - 운영 환경에서는 IAM 최소 권한 정책을 사용하세요. (Bucket put_object 정도)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name_here
AWS_S3_REGION_NAME=ap-northeast-2
